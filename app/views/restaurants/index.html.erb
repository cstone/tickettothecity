<section class="container">
  <div class="row-fluid">
    <div class="span3">
      <h4>Filter</h4>
      <hr>
      <%= search_form_for @search do |f| %>
          <div class="row-fluid">
            <h5>Areas</h5>
            <ul style="list-style: none;">
              <% Area.all.each do |area| %>
                  <li>
                    <%= check_box_tag('q[areas_id_eq_any][]', area.id ) %>
                    <%= area.name %>
                  </li>
              <% end %>
            </ul>

          </div>
          <div class="row-fluid">
            <h5>Cuisine</h5>
            <ul style="list-style: none;">
              <% Cuisine.all.each do |cuisine| %>
                  <li><%= check_box_tag('q[cuisines_id_eq_any][]', cuisine.id ) %>
                    <%= cuisine.name %></li>
              <% end %>
            </ul>
          </div>
          <div class="row-fluid">
            <h5>Features</h5>
            <ul style="list-style: none;">
              <% Feature.all.each do |feature| %>
                  <li><%= check_box_tag('q[features_id_eq_any][]', feature.id ) %>
                    <%= feature.name %></li>
              <% end %>
            </ul>
          </div>




          <div class="actions"><%= f.submit "Search", class: 'btn btn-primary' %> <%= link_to 'Clear search', request.path, class: 'btn btn-primary btn-small'  %></div>
      <% end %>
    </div>



    <div class="span9 borderleft">
      <h2>Dining</h2>
      <%= search_form_for @search do |f| %>
            <%= f.text_field :title_cont, placeholder: 'Search...', class: 'span10' %>
          <% end %>
      <% @restaurants.each do |restaurant| %>
          <div class="row-fluid individualitem">
            <div class="span10">
              <div class="row-fluid itemtitle"><%= link_to restaurant.title, restaurant %></div>

              <div class="row-fluid">
                <% if !restaurant.areas.empty? %>
                    <%= restaurant.areas.map{|area| area.name}.join(", ") %>
                <% end %>
              </div>
              <div class="row-fluid">
                <% if !restaurant.cuisines.empty? %>
                    <% restaurant.cuisines.each do |cuisine| %>
                        <%= cuisine.name %>
                    <% end %>
                <% end %>
              </div>
              <div class="row-fluid"><%= simple_format(restaurant.description.truncate(300)) %></div>
            </div>
            <div class="span2">
              <%= link_to image_tag(restaurant.restaurant_image.url(:thumb).to_s, class: 'thumbnail'), restaurant %>
            </div>
          </div>
          <hr>
      <% end %>

    </div>


  </div>
</section>

<br>




