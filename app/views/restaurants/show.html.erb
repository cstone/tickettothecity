<section id="breadcrumbs" class="container">
  <div class="row-fluid">
    <div class="span12">
      <ul class="breadcrumb">
        <li><%= link_to 'Home', root_path %> <span class="divider">>></span></li>
        <li><%= link_to 'Dining', restaurants_path %> <span class="divider">>></span></li>
        <li class="active"><%= @restaurant.title %></li>
      </ul>
    </div>
  </div>
</section>

<section class="container">
  <div class="row-fluid">
    <div class="span3">
      <div class="row-fluid">
      <%= image_tag @restaurant.restaurant_image.url(:main).to_s, class: 'thumbnail' %>
      </div>
      <br/>
      <% if !@restaurant.features.empty? %>
      <div class="row-fluid itemtitle">Features</div>

      <div class="row-fluid">
        <ul>
          <% @restaurant.features.each do |feature| %>
          <li><%= feature.name %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>



    <div class="span6">
      <div class="span12">
        <div class="row-fluid itemtitle"><%= @restaurant.title %></div>

        <div class="row-fluid"><strong><%= @restaurant.price.value %></strong></div>
        <div class="row-fluid"><%= @restaurant.areas.map{|area| area.name}.join(", ") %></div>
        <div class="row-fluid"><%= @restaurant.cuisines.map{|cuisine| cuisine.name}.join(", ") %></div>
        <div class="row-fluid"><%= link_to(@restaurant.address, "http://maps.google.com/maps?q=#{@restaurant.address}") %></div>
        <div class="row-fluid"><%= @restaurant.phone %></div>
        <div class="row-fluid"><%= link_to(@restaurant.website, @restaurant.website) if !@restaurant.website.empty? %></div>
        <hr>
        <div class="row-fluid"><%= raw(@restaurant.description) %></div>

      </div>
    </div>


    <div class="span3">

      <div class="row-fluid">
        <span class='st_facebook_large' displayText='Facebook'></span>
        <span class='st_twitter_large' displayText='Tweet'></span>
        <span class='st_pinterest_large' displayText='Pinterest'></span>
        <span class='st_googleplus_large' displayText='Google +'></span>
        <span class='st_email_large' displayText='Email'></span>
        <span class='st_sharethis_large' displayText='ShareThis'></span></div>
      <hr>

      <div class="row-fluid">


      </div>

    </div>
  </div>
</section>
<br/>