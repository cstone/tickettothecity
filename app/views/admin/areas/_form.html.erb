<%= simple_form_for([:admin, @area])  do |f| %>

    <table class="table">
      <tr>
        <td>Name:</td>
        <td><%= f.input :name, label: false %></td>
      </tr>
      <tr>
        <td>Active:</td>
        <td><%= f.input :active, label: false %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.button :submit, class: 'btn btn-small btn-success' %> <%= link_to 'Cancel', :back, class: 'btn btn-small btn-default' %></td>
      </tr>
    </table>
<% end %>

