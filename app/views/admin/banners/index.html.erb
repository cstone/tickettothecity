<h2>Banners</h2>

<table class="table">

<% @banners.each do |banner| %>
  <tr>
    <td><%= image_tag banner.banner_image.url(:thumb).to_s %></td>
    <td><%= link_to 'Delete', admin_banner_path(banner), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger'  %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Banner', new_admin_banner_path, class: 'btn btn-success'%>
