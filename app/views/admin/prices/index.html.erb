<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prices.each do |price| %>
  <tr>
    <td><%= price.value %></td>
    <td></td>
    <td></td>
    <td align="right"><%= link_to 'Edit', edit_admin_price_path(price), class: 'btn btn-small btn-warning' %> <%= link_to 'Delete', admin_price_path(price), method: :delete, data: { confirm: 'Are you sure you want to delete this price?' }, class: 'btn btn-small btn-danger' %></td>
  </tr>
