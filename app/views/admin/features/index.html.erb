<h2>Features</h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= feature.name %></td>
    <td><%= feature.active %></td>
    <td></td>
    <td></td>
    <td align="right"><%= link_to 'Edit', edit_admin_feature_path(feature), class: 'btn btn-small btn-warning' %> <%= link_to 'Delete', admin_feature_path(feature), method: :delete, data: { confirm: 'Are you sure you want to delete this feature?' }, class: 'btn btn-small btn-danger'  %></td>
  </tr>
<% end %>
</table>

<br>
<%= link_to 'New Feature', new_admin_feature_path, class: 'btn btn-success' %>