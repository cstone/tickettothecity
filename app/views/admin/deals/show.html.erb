<p id="notice"><%= notice %></p>
<table class="table">
  <tr>
    <td>Title: </td>
    <td><%= @deal.title %></td>
  </tr>
  <tr>
    <td>Details: </td>
    <td><%= sanitize @deal.details %></td>
  </tr>
  <tr>
    <td>Area: </td>
    <td>
      <% if !@deal.areas.empty? %>
          <%= @deal.areas.map{|area| area.name}.join(",") %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>Image: </td>
    <td><%= image_tag @deal.deal_image, class: 'thumbnail' %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_admin_deal_path(@deal), class: 'btn btn-small btn-warning' %>
<%= link_to 'Delete', admin_deal_path(@deal), method: :delete, data: { confirm: 'Are you sure you want to delete this deal?' }, class: 'btn btn-small btn-danger' %>