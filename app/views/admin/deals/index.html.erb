<h2>Deals</h2>

<table width="100%" class="table">
  <tr>
    <th width="7%"></th>
    <th width="46%">Title</th>
    <th width="31%">Area(s)</th>
    <th width="8%"></th>
    <th width="8%"></th>
  </tr>

  <% @deals.each do |deal| %>
      <tr>
        <td><%= image_tag deal.deal_image.url(:thumb).to_s, class: 'thumbnail' %></td>
        <td><%= link_to deal.title, admin_deal_path(deal)  %></td>
        <td>
          <% if !deal.areas.empty? %>
              <%= deal.areas.map{|area| area.name}.join(",") %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_deal_path(deal), class: 'btn btn-small btn-warning' %></td>
        <td><%= link_to 'Delete', admin_deal_path(deal), method: :delete, data: { confirm: 'Are you sure you want to delete this deal?' }, class: 'btn btn-small btn-danger' %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Deal', new_admin_deal_path, class: 'btn btn-success' %>
