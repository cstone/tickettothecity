<p id="notice"><%= notice %></p>
<table class="table">
  <tr>
    <td>Title: </td>
    <td><%= @event.title %></td>
  </tr>
  <tr>
    <td>Details: </td>
    <td><%= sanitize @event.details %></td>
  </tr>
  <tr>
    <td>Event Image:</td>
    <td><%= image_tag @event.event_image, class: 'thumbnail' %></td>
  </tr>
  <tr>
    <td>Venue: </td>
    <td><%= @event.venue %></td>
  </tr>
  <tr>
    <td>Price: </td>
    <td><%= @event.price %></td>
  </tr>
  <tr>
    <td>Address: </td>
    <td><%= @event.address %></td>
  </tr>
  <tr>
    <td>Phone: </td>
    <td><%= @event.phone %></td>
  </tr>
  <tr>
    <td>Website: </td>
    <td><%= link_to @event.website, @event.website %></td>
  </tr>
  <tr>
    <td>Area: </td>
    <td>
      <% if !@event.areas.empty? %>
          <%= @event.areas.map{|area| area.name}.join(", ") %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>Type: </td>
    <td>
      <% if !@event.types.empty? %>
          <%= @event.types.map{|type| type.name}.join(", ") %>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_admin_event_path(@event), class: 'btn btn-small btn-warning' %>
<%= link_to 'Delete', admin_event_path(@event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: 'btn btn-small btn-danger' %>
