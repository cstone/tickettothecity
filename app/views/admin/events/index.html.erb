<h2>Events</h2>

<table width="100%" class="table">
  <tr>
    <th width="11%"></th>
    <th width="45%">Title</th>
    <th width="5%"></th>
    <th width="5%"></th>
  </tr>

  <% @events.each do |event| %>
      <tr>
        <td><%= image_tag event.event_image.url(:thumb).to_s, class: 'thumbnail' %></td>
        <td><%= link_to event.title, admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-small btn-warning'  %></td>
        <td><%= link_to 'Delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: 'btn btn-small btn-danger'  %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Event', new_admin_event_path, class: 'btn btn-small btn-success'  %>
