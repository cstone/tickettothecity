<%= simple_form_for([:admin, @event], html: {multipart: true, class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.file_field :event_image %>
    <%= f.input :venue %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :website %>
    <%= f.association :areas, label: false %>
    <%= f.association :types, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
