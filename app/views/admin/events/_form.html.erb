<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :event_image %>
    <%= f.input :venue %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :website %>
    <%= f.input :area_id %>
    <%= f.input :type_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
