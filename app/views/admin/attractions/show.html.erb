<p id="notice"><%= notice %></p>

<table class="table">
  <tr>
    <td>Title: </td>
    <td><%= @attraction.title %></td>
  </tr>
  <tr>
    <td>Image: </td>
    <td><%= image_tag @attraction.attraction_image.url(:main).to_s, class: 'thumbnail' %></td>
  </tr>
  <tr>
    <td>Address: </td>
    <td><%= link_to(@attraction.address, "http://maps.google.com/maps?q=#{@attraction.address}") %></td>
  </tr>
  <tr>
    <td>Phone: </td>
    <td><%= @attraction.phone %></td>
  </tr>
  <tr>
    <td>Website: </td>
    <td><%= link_to(@attraction.website, @attraction.website) if !@attraction.website.empty? %></td>
  </tr>
  <tr>
    <td>Description: </td>
    <td><%= raw(@attraction.description) %></td>
  </tr>
  <tr>
    <td>Areas: </td>
    <td><%= @attraction.areas.map{|area| area.name}.join(", ") %></td>
  </tr>
  <tr>
    <td>Types: </td>
    <td><%= @attraction.types.map{|type| type.name}.join(", ") %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_admin_attraction_path(@attraction), class: 'btn btn-small btn-warning' %>
<%= link_to 'Delete', admin_attraction_path(@attraction), method: :delete, data: { confirm: 'Are you sure you want to delete this attraction?' }, class: 'btn btn-small btn-danger' %>