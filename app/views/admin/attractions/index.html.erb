<h1>Listing attractions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Attraction image</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Area</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attractions.each do |attraction| %>
  <tr>
    <td><%= attraction.title %></td>
    <td><%= attraction.description %></td>
    <td><%= attraction.attraction_image %></td>
    <td><%= attraction.address %></td>
    <td><%= attraction.phone %></td>
    <td><%= attraction.website %></td>
    <td><%= attraction.area_id %></td>
    <td><%= link_to 'Show', admin_attraction_path(attraction) %></td>
    <td><%= link_to 'Edit', edit_admin_attraction_path(attraction) %></td>
    <td><%= link_to 'Destroy', admin_attraction_path(attraction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

