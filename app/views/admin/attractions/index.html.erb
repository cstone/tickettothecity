<h2>Attractions</h2>

<table width="100%" class="table">
  <tr>
    <th width="9%"></th>
    <th width="51%">Title</th>
    <th width="13%"></th>
    <th width="13%"></th>
    <th width="14%"></th>
  </tr>

  <% @attractions.each do |attraction| %>
      <tr>
        <td><%= image_tag attraction.attraction_image.url(:thumb).to_s, class: 'thumbnail' %></td>
        <td><%= link_to attraction.title, admin_attraction_path(attraction)  %></td>
        <td><%= attraction.area_id %></td>
        <td><%= link_to 'Edit', edit_admin_attraction_path(attraction), class: 'btn btn-small btn-warning'  %></td>
        <td><%= link_to 'Delete', admin_attraction_path(attraction), method: :delete, data: { confirm: 'Are you sure you want toe delete this attraction?' }, class: 'btn btn-small btn-danger'  %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Attraction', new_admin_attraction_path, class: 'btn btn-success'  %>
