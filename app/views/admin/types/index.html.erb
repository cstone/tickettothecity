<h2>Types</h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @types.each do |type| %>
  <tr>
    <td><%= type.name %></td>
    <td></td>
    <td style="text-align: right;"><%= link_to 'Edit', edit_admin_type_path(type), class: 'btn btn-small btn-warning' %> <%= link_to 'Delete', admin_type_path(type), method: :delete, data: { confirm: 'Are you sure you want to delete this type?' }, class: 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

<br>
<%= link_to 'Add New Type', new_admin_type_path, class: 'btn btn-success' %>
