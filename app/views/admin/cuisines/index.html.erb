<h2>Cuisines</h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cuisines.each do |cuisine| %>
  <tr>
    <td><%= cuisine.name %></td>
    <td><%= cuisine.active %></td>
    <td></td>
    <td></td>
    <td align="right"><%= link_to 'Edit', edit_admin_cuisine_path(cuisine), class: 'btn btn-small btn-warning' %> <%= link_to 'Destroy', admin_cuisine_path(cuisine), method: :delete, data: { confirm: 'Are you sure you want to delete this cuisine?' }, class: 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

