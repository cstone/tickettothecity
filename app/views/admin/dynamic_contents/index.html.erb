<h2>Dynamic Content</h2>

<table class="table">
  <tr>
    <th width="25%">Title</th>
    <th width="25%">Key</th>
    <th width="25%">Value</th>
    <th width="25%" align="right"></th>
  </tr>

  <% @dynamic_contents.each do |dynamic_content| %>
      <tr>
        <td><%= dynamic_content.title %></td>
        <td><%= dynamic_content.key %></td>
        <td><%= strip_tags dynamic_content.value %></td>
        <td align="right"><%= link_to 'Edit', edit_admin_dynamic_content_path(dynamic_content), class: 'btn btn-small btn-warning' %> <%= link_to 'Destroy', admin_dynamic_content_path(dynamic_content), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger'  %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'Add New Dynamic Content', new_admin_dynamic_content_path, class: 'btn btn-success' %>
