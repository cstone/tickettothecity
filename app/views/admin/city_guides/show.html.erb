<p id="notice"><%= notice %></p>

<table class="table">
  <tr>
    <td>Title: </td>
    <td><%= @city_guide.name %></td>
  </tr>
  <tr>
    <td>Description: </td>
    <td><%= sanitize @city_guide.description %></td>
  </tr>
  <tr>
    <td>PDF: </td>
    <td>
      <% if @city_guide.pdf.url.to_s.empty? %>
          <span style="color:#b10000;">You haven't uploaded a city guide.  Please upload a city guide in pdf format.</span>
      <% else %>
          <%= link_to 'City Guide', @city_guide.pdf.url %>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_admin_city_guide_path(@city_guide), class: 'btn btn-small btn-warning' %>
<%= link_to 'Delete', admin_city_guide_path(@city_guide), method: :delete, data: { confirm: 'Are you sure you want to delete this city guide?' }, class: 'btn btn-small btn-danger' %>