<section id="breadcrumbs" class="container">
  <div class="row-fluid">
    <div class="span12">
      <ul class="breadcrumb">
        <li><%= link_to 'Home', root_path %> <span class="divider">>></span></li>
        <li><%= link_to 'Attractions', attractions_path %> <span class="divider">>></span></li>
        <li class="active"><%= @attraction.title %></li>
      </ul>
    </div>
  </div>
</section>

<section class="container">
  <div class="row-fluid">
    <div class="span3">
      <div class="row-fluid">
        <%= image_tag @attraction.attraction_image.url(:main).to_s, class: 'thumbnail' %>
      </div>

    </div>



    <div class="span6">
      <div class="span12">
        <div class="row-fluid itemtitle"><%= @attraction.title %></div>

        <div class="row-fluid"><%= @attraction.areas.map{|area| area.name}.join(",") %></div>
        <div class="row-fluid"><%= link_to(@attraction.address, "http://maps.google.com/maps?q=#{@attraction.address}") %></div>
        <div class="row-fluid"><%= @attraction.phone %></div>
        <div class="row-fluid"><%= link_to(@attraction.website, @attraction.website) if !@attraction.website.empty? %></div>
        <hr>
        <div class="row-fluid"><%= raw(@attraction.description) %></div>

      </div>
    </div>


    <div class="span3">

      <div class="row-fluid">
        <span class='st_facebook_large' displayText='Facebook'></span>
        <span class='st_twitter_large' displayText='Tweet'></span>
        <span class='st_pinterest_large' displayText='Pinterest'></span>
        <span class='st_googleplus_large' displayText='Google +'></span>
        <span class='st_email_large' displayText='Email'></span>
        <span class='st_sharethis_large' displayText='ShareThis'></span></div>
      <hr>

      <div class="row-fluid">


      </div>

    </div>
  </div>
</section>